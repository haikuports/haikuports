BUILD()
{
	cmake -Bbuild -S. $cmakeDirArgs \
		-DCMAKE_BUILD_TYPE=Release
	make -Cbuild $jobArgs
}

INSTALL()
{
	make -Cbuild install

	mkdir -p $includeDir
	mv $prefix/include/* $includeDir
	rm -rf $prefix/include

	fixPkgconfig

	packageEntries devel \
		$developDir
}
