diff --git a/nspr/configure.in b/nspr/configure.in
index 9e9f1b1..5361a5b 100644
--- a/nspr/configure.in
+++ b/nspr/configure.in
@@ -1312,6 +1312,24 @@ case "$target" in
         ;;
     esac
     ;;
+    
+*-haiku*)
+    AC_DEFINE(XP_UNIX)
+    AC_DEFINE(HAIKU)
+    AC_DEFINE(HAVE_SOCKLEN_T)
+    AC_DEFINE(HAVE_FCNTL_FILE_LOCKING)
+    DSO_CFLAGS="-fPIC"
+    USE_PTHREADS=1
+    IMPL_STRATEGY=_PTH
+    MDCPUCFG_H=_linux.cfg
+    PR_MD_ASFILES=os_Linux_x86.s
+    PR_MD_CSRCS=linux.c
+    MKSHLIB='$(CC) $(DSO_LDOPTS) -o $@'
+    DSO_CFLAGS=-fPIC
+    DSO_LDOPTS='-shared -Wl,-soname -Wl,$(notdir $@)'
+    _OPTIMIZE_FLAGS=-O2
+    AC_CHECK_LIB(network, gethostbyaddr, [OS_LIBS="$OS_LIBS -lnetwork"])
+	;;
 
 *-bsdi*)
     AC_DEFINE(XP_UNIX)
@@ -2538,7 +2556,7 @@ dnl The same goes for BeOS.
 dnl OS/2 has dlfcn in libc.
 
 case $target in
-*-darwin*|*-beos*|*-os2*)
+*-darwin*|*-beos*|*-haiku*|*-os2*)
     ;;
 *)
     AC_CHECK_LIB(dl, dlopen,
@@ -2676,7 +2694,7 @@ echo "
 ])
 
 case "$target_os" in
-darwin*)
+darwin*|haiku*)
     _HAVE_PTHREADS=1
     ;;
 *)
