REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD()
{
	cd onig-5.9.2
	libtoolize --force --copy --install
	touch NEWS ChangeLog
	autoreconf -i
	./configure --prefix=`finddir B_COMMON_DIRECTORY`
	make
}

INSTALL()
{
	cd onig-5.9.2
	make install
}

TEST()
{
	cd onig-5.9.2
	make check
}

