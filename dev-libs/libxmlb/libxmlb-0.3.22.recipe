SUMMARY="A library to help create and query binary XML blobs"
DESCRIPTION="libxmlb is a small helper library that is used to create and \
query the binary XML-like blobs that are used by AppStream."
HOMEPAGE="https://github.com/hughsie/libxmlb"
COPYRIGHT="Richard Hughes"
LICENSE="GNU LGPL v2.1"
REVISION="1"

# Usando la última versión estable (0.3.22) como ejemplo.
portVersion="0.3.22"
SOURCE_URI="https://github.com/hughsie/libxmlb/archive/refs/tags/$portVersion.tar.gz"
# El nombre del archivo tarball no coincide con el patrón por defecto
SOURCE_FILENAME="libxmlb-$portVersion.tar.gz"
CHECKSUM_SHA256="103684ed37a45d0aed8f95e97294ed26945b5aeebf44734f3994081eecebb11c"
SOURCE_DIR="libxmlb-$portVersion"

ARCHITECTURES="all !x86_gcc2"
SECONDARY_ARCHITECTURES="x86"

# La biblioteca es libxmlb.so.2
libVersion="2"

PROVIDES="
	libxmlb$secondaryArchSuffix = $portVersion
	lib:libxmlb$secondaryArchSuffix = $libVersion
	cmd:xb_tool$secondaryArchSuffix
	"

PROVIDES_devel="
	libxmlb${secondaryArchSuffix}_devel = $portVersion
	devel:libxmlb$secondaryArchSuffix = $libVersion
	"

REQUIRES="
	haiku$secondaryArchSuffix
	lib:libglib_2.0$secondaryArchSuffix
	lib:libz$secondaryArchSuffix
	lib:libzstd$secondaryArchSuffix
	lib:liblzma$secondaryArchSuffix
	lib:libgirepository_1.0
	gobject_introspection$secondaryArchSuffix
	"

REQUIRES_devel="
	libxmlb$secondaryArchSuffix == $portVersion base
	devel:libglib_2.0$secondaryArchSuffix
	devel:libz$secondaryArchSuffix
	devel:libzstd$secondaryArchSuffix
	devel:liblzma$secondaryArchSuffix
	lib:libgirepository_1.0
	gobject_introspection$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libglib_2.0$secondaryArchSuffix
	devel:libz$secondaryArchSuffix
	devel:libzstd$secondaryArchSuffix
	devel:liblzma$secondaryArchSuffix
	lib:libgirepository_1.0
	gobject_introspection$secondaryArchSuffix
	gobject_introspection${secondaryArchSuffix}_devel
	"

BUILD_PREREQUIRES="
	lib:libgirepository_1.0
	gobject_introspection$secondaryArchSuffix
	gobject_introspection${secondaryArchSuffix}_devel
	cmd:gcc$secondaryArchSuffix
	cmd:ld$secondaryArchSuffix
	cmd:meson
	cmd:ninja
	cmd:cmake
	cmd:diff
	cmd:g_ir_annotation_tool
	cmd:g_ir_compiler
	cmd:g_ir_generate
	cmd:g_ir_inspect
	cmd:g_ir_scanner
	cmd:pkg_config$secondaryArchSuffix
	"

BUILD()
{
	meson setup Build \
		--buildtype=release \
		--prefix="$prefix" \
		--libdir="$libDir" \
		--includedir="$includeDir" \
		-Dgtkdoc=false

	ninja -C Build
}

INSTALL()
{
	ninja install -C Build

	prepareInstalledDevelLibs \
		libxmlb

	fixPkgconfig

	packageEntries devel \
		$developDir
}

