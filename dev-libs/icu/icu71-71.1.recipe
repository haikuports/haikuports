	lib:libicuio$secondaryArchSuffix = $portVersion compat >= 71
	lib:libicutest$secondaryArchSuffix = $portVersion compat >= 71
	lib:libicutu$secondaryArchSuffix = $portVersion compat >= 71
	lib:libicuuc$secondaryArchSuffix = $portVersion compat >= 71
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

PROVIDES_devel="
	icu71${secondaryArchSuffix}_devel = $portVersion
	cmd:icu_config${secondaryArchSuffix} = $portVersion compat >= 71
	devel:libicudata${secondaryArchSuffix} = $portVersion compat >= 71
	devel:libicui18n${secondaryArchSuffix} = $portVersion compat >= 71
	devel:libicuio${secondaryArchSuffix} = $portVersion compat >= 71
	devel:libicutest${secondaryArchSuffix} = $portVersion compat >= 71
	devel:libicutu${secondaryArchSuffix} = $portVersion compat >= 71
	devel:libicuuc${secondaryArchSuffix} = $portVersion compat >= 71
	"
