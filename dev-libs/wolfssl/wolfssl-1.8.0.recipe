BUILD()
{
	cd wolfssl-1.8.0
	dos2unix *
	dos2unix include/*
	dos2unix ctaocrypt/include/*
	dos2unix ctaocrypt/src/*
	libtoolize --force --copy --install
	rm acinclude.m4
	rm aclocal.m4
	aclocal
	autoconf
	chmod 755 configure
	automake
	./configure --prefix=`finddir B_COMMON_DIRECTORY` --enable-shared
	make
}

INSTALL()
{
	cd wolfssl-1.8.0
	make install
}

TEST()
{
	cd wolfssl-1.8.0
	make check
	cd testsuite
	testsuite
}
