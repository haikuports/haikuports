BUILD()
{
	cd wolfssl-2.5.0
	dos2unix *
	dos2unix include/*
	dos2unix ctaocrypt/include/*
	dos2unix ctaocrypt/src/*
	libtoolize --force --copy --install
	aclocal -I m4
	autoconf
	chmod 755 configure
	automake
	./configure --prefix=`finddir B_COMMON_DIRECTORY` --enable-shared
	make
}

INSTALL()
{
	cd wolfssl-2.5.0
	make install
}

TEST()
{
	cd wolfssl-2.5.0
	make check
	cd testsuite
	testsuite
}
