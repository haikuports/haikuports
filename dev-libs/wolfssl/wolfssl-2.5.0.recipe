REVISION="1"
SOURCE_URI="http://yassl.com/cyassl-2.5.0.zip"
CHECKSUM_MD5="8965fb76f89af827ace53e423453b7cd"
# WARNING: CHECKSUM_SHA256 must be added to recipe here
SOURCE_DIR="cyassl-$portVersion"

ARCHITECTURES="!x86_gcc2"

PROVIDES="
	"
REQUIRES="
	"
	haiku
	dos2unix >= 1.0
	"
	PROVIDES_devel=
	"

PROVIDES_devel="
	"
REQUIRES_devel="
	"

BUILD_REQUIRES=""
BUILD_PREREQUIRES="
	"

BUILD()
{
	cd wolfssl-2.5.0
	dos2unix *
	dos2unix include/*
	dos2unix ctaocrypt/include/*
	dos2unix ctaocrypt/src/*
	libtoolize --force --copy --install
	aclocal -I m4
	autoconf
	chmod 755 configure
	automake
	./configure --prefix=`finddir B_COMMON_DIRECTORY` --enable-shared
	make
}

INSTALL()
{
	cd wolfssl-2.5.0
	make install
}

TEST()
{
	cd wolfssl-2.5.0
	make check
	cd testsuite
	testsuite
}
