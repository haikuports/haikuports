SUMMARY="Library to support hangul input method logic"
DESCRIPTION="A library to support hangul input method logic, hanja dictionary and small hangul character classification."
HOMEPAGE="https://github.com/libhangul/libhangul"
COPYRIGHT="1991, 1999 Free Software Foundation, Inc."
LICENSE="GNU LGPL v2.1"
REVISION="1"
SOURCE_URI="https://github.com/libhangul/libhangul/archive/refs/tags/libhangul-0.1.0.zip"
SOURCE_DIR="libhangul-$portVersionedName"
CHECKSUM_SHA256="e90fb326167f8d54ba637bf5d1d55cbe9956f6b03a7ae9cb0786037b4a2a487b"

ARCHITECTURES="all"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	libhangul$secondaryArchSuffix = $portVersion
	cmd:hangul
	lib:libhangul$secondaryArchSuffix = $portVersion
	"

PROVIDES_devel="
	libhangul$secondaryArchSuffix_devel = $portVersion
	devel:libhangul = $portVersion
	"

REQUIRES="
	haiku$secondaryArchSuffix
	lib:libiconv$secondaryArchSuffix
	lib:libintl$secondaryArchSuffix
	"

BUILD_PREREQUIRES="
	haiku_devel
	expat_devel
	cmd:autoconf
	cmd:gcc
	cmd:libtool
	cmd:libtoolize$secondaryArchSuffix
	cmd:make
	cmd:pkg_config$secondaryArchSuffix
	"

BUILD_REQUIRES="
	gettext
	devel:libiconv$secondaryArchSuffix
	"

BUILD()
{
	sh ./autogen.sh
	autoupdate
	runConfigure ./configure
	make $jobArgs
}

INSTALL()
{
	make install

	prepareInstalledDevelLib libhangul
	fixPkgconfig

	packageEntries devel $developDir
}

