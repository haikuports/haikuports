+#define CPU_ZERO CPUSET_ZERO
+#define CPU_ISSET CPUSET_ISSET
+#define CPU_SET CPUSET_SET
+static inline unsigned int
+__cpu_count(cpuset_t *set)
+{
+	unsigned int count = 0;
+	unsigned int i;
+	for (i = 0; i < _howmany(CPU_SETSIZE, NCPUSETBITS); i++) {
