	lib:libevent_extra$secondaryArchSuffix = 5.1.9 compat >= 5
	lib:libevent_pthreads$secondaryArchSuffix = 5.1.9 compat >= 5
	lib:libevent_openssl$secondaryArchSuffix = 5.1.9 compat >= 5
