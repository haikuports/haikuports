DESCRIPTION="Freedroid Classic Game"
HOMEPAGE="http://freedroid.sourceforge.net/"
SRC_URI="http://sourceforge.net/projects/freedroid/files/freedroidClassic/FreedroidClassic-1.0.2/freedroid-1.0.2.tar.gz"
REVISION="1"
DEPEND="SDL >= 1.2.3 "
CHECKSUM_MD5="585a65f61c2cd308ab45d5c514f695dc"
BUILD()
{
		cd freedroid-1.0.2
		libtoolize --force --copy --install
		aclocal
		autoconf
		automake
#		chmod 755 configure
		./configure --prefix=`finddir B_APPS_DIRECTORY`/FreeDroid
 		make
}

INSTALL()
{
		cd freedroid-1.0.2
		make install
}
