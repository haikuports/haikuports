DESCRIPTION="Freedroid Classic Game"
SUMMARY="An open source role playing game"
HOMEPAGE="http://freedroid.sourceforge.net/"
SOURCE_URI="http://sourceforge.net/projects/freedroid/files/freedroidClassic/FreedroidClassic-1.0.2/freedroid-1.0.2.tar.gz"
REVISION="2"
CHECKSUM_MD5="585a65f61c2cd308ab45d5c514f695dc"
LICENSE="GNU GPL v2"
COPYRIGHT="2002-2010 The Freedroid Team"

ARCHITECTURES="x86 x86_gcc2 x86_64"

PROVIDES="
	freedroid = $portVersion
	cmd:freedroid = $portVersion
	"
REQUIRES="
	haiku
	lib:libsdl
	lib:libsdl_image
	lib:libsdl_mixer
	lib:libjpeg
	lib:libpng
	zlib
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libsdl
	devel:libsdl_image
	devel:libsdl_mixer
	devel:libjpeg
	devel:libpng
	zlib_devel
	"

BUILD_PREREQUIRES="
	cmd:aclocal
	cmd:autoconf
	cmd:libtoolize
	cmd:automake
	cmd:make
	cmd:gcc
	"

BUILD()
{
		libtoolize --force --copy --install
		aclocal
		autoconf
		automake --add-missing
		runConfigure ./configure --disable-dependency-tracking
 		make $jobArgs
}

INSTALL()
{
		make install
}
