LICENSE="MIT"
REVISION="1"
srcGitRev="9408bbbb4f3d41b57dcf80c135a3e177e6f8f309"
SOURCE_URI="$HOMEPAGE/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="80224711fd0740766e5e890e7aa778ca91ad1ace74abed2c64cd43649e9def49"
