SUMMARY="Haiku Flat UI look"
DESCRIPTION="After install this package, you need to close 'Deskbar' and 'Tracker' services from 'ProcessControler' \
, they will restart auto... or simply restart the computer. \

Credits for:
- Nahuel Tello (unarix)
- All the comunity of Haiku discuss.

Usage: To use the themes included, you need to install the package 'Theme Manager' from haiku-depot. After install it, select from the list: 'DarkFlat'/'LightFlat'/'MoonFlat'.

For more info and options in config file visit: https://github.com/unarix/haiku_darkstyle
"
HOMEPAGE="https://github.com/unarix/haiku_darkstyle/"
COPYRIGHT="2020 Haiku Inc."
LICENSE="MIT
		Zlib"
REVISION="1"
SOURCE_URI="https://github.com/unarix/haiku_darkstyle/archive/$portVersion.tar.gz"
CHECKSUM_SHA256="265ee577f31e723dedd3443df1d7c76f5d83b2134b712d8eb0377becc573898e"
SOURCE_FILENAME="haiku_darkstyle-$portVersion.tar.gz"
SOURCE_DIR="haiku_darkstyle-$portVersion"

ARCHITECTURES="?x86_gcc2 ?x86 x86_64"
SECONDARY_ARCHITECTURES="?x86_gcc2 x86"

GLOBAL_WRITABLE_FILES="
	settings/UIThemes directory keep-old
	"

USER_SETTINGS_FILES=""

PROVIDES="
	FlatControlLook$secondaryArchSuffix = $portVersion
	FlatDecorator$secondaryArchSuffix = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	makefile_engine
	"
BUILD_PREREQUIRES="
	cmd:gcc$secondaryArchSuffix
	cmd:make
	"

BUILD()
{
	make OBJ_DIR=objects $jobArgs
}

INSTALL()
{
	control_lookDir=$addOnsDir/control_look
	mkdir -p $control_lookDir
	cp -a FlatControlLook/objects/FlatControlLook $control_lookDir

	decoratorsDir=$addOnsDir/decorators
	mkdir -p $decoratorsDir
	cp -a FlatDecorator/objects/FlatDecorator $decoratorsDir

	settingsD=$settingsDir/UIThemes
	mkdir -p $settingsD
	cp -a DarkFlat/ $settingsD/DarkFlat
	cp -a LightFLat/ $settingsD/LightFLat
	cp -a MoonFLat/ $settingsD/MoonFLat
}
