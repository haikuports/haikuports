SUMMARY="Will do later"
DESCRIPTION="Will do later this is a draft"
HOMEPAGE="https://bitcoin.org"
COPYRIGHT="idk"
LICENSE="MIT"
REVISION="1"
SOURCE_URI="https://github.com/bitcoin/bitcoin/archive/v$portVersion.tar.gz"
CHECKSUM_SHA256="98b3a98a67054123bef6714e4035e18f9250a1b6d63829258ad057906e75d8b1"
SOURCE_DIR="bitcoin-$portVersion"

ARCHITECTURES="!x86_gcc2 x86_64"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	libbitcoinconsensus = $portVersion
	#"bitcoind" seems to be what
	#the non GUI bitcoin app is called.
	app:bitcoind = $portVersion
	"
REQUIRES="
	#I know this should be in alphabetical order...
	#but I'll do that later
	haiku$secondaryArchSuffix
	lib:libminiupnpc$secondaryArchSuffix
	cmd:univalue$secondaryArchSuffix
	cmd:pkg_config$secondaryArchSuffix
	lib:libboost_system$secondaryArchSuffix
	lib:libevent$secondaryArchSuffix
	lib:libdb$secondaryArchSuffix
	lib:libssl$secondaryArchSuffix
	lib:libzmq$secondaryArchSuffix
	cmd:protobuf
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libboost_system$secondaryArchSuffix
	devel:libevent$secondaryArchSuffix
	devel:libdb$secondaryArchSuffix
	devel:libssl$secondaryArchSuffix
	devel:libzmq$secondaryArchSuffix
	"
BUILD_PREREQUIRES="
	cmd:g++$secondaryArchSuffix
	cmd:make
	cmd:which
	cmd:autoreconf
	cmd:aclocal
	cmd:autoconf
	cmd:libtoolize$secondaryArchSuffix
	cmd:sh
	"

BUILD()
{
	sh autogen.sh
	#Disabled wallet because it requires libdb4.8,
	#which we don't seem to have
	runConfigure ./configure --disable-wallet
	make OBJ_DIR=objects
}

INSTALL()
{
	install -t $appsDir objects/bitcoind
	addAppDeskbarSymlink $appsDir/bitcoind
}
