SUMMARY="Will do later"
DESCRIPTION="Will do later this is a draft"
HOMEPAGE="https://bitcoin.org"
COPYRIGHT="idk"
LICENSE="MIT"
REVISION="1"
SOURCE_URI="https://github.com/bitcoin/bitcoin/archive/v$portVersion.tar.gz"
CHECKSUM_SHA256="98b3a98a67054123bef6714e4035e18f9250a1b6d63829258ad057906e75d8b1"
SOURCE_DIR="bitcoin-$portVersion"

ARCHITECTURES="?x86_gcc2 x86_64"

PROVIDES="
	libbitcoinconsensus = $portVersion
	#"bitcoind" seems to be what 
	#the non GUI bitcoin app is called.
	app:bitcoind = $portVersion
	"
REQUIRES="
	#I know this should be in alphabetical order...
	#but I'll do that later
	haiku
	cmd:miniupnpc
	cmd:univalue
	cmd:pkg_config
	lib:libboost_system
	lib:libevent
	lib:libdb
	lib:libssl
	lib:libzmq
	cmd:protobuf
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libboost_system
	devel:libevent
	devel:libdb
	devel:libssl
	devel:libzmq
	"
BUILD_PREREQUIRES="
	cmd:g++
	cmd:make
	cmd:which
	cmd:autoreconf
	cmd:aclocal
	cmd:autoconf
	cmd:libtoolize
	cmd:sh
	"

BUILD()
{
	sh autogen.sh
	#Disabled wallet because it requires libdb4.8,
	#which we don't seem to have
	runConfigure ./configure --disable-wallet
	make OBJ_DIR=objects
}

INSTALL()
{
	install -t $appsDir objects/bitcoind
	addAppDeskbarSymlink $appsDir/bitcoind
}
