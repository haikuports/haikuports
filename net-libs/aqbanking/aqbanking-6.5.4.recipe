SUMMARY="A library for online banking and financial applications"
DESCRIPTION="AQBanking"
HOMEPAGE="http://www.aqbanking.de"
COPYRIGHT="Martin Preuss"
LICENSE="GNU LGPL v2"
REVISION="1"
SOURCE_URI="https://github.com/aqbanking/aqbanking/archive/refs/tags/$portVersion.tar.gz"
CHECKSUM_SHA256="66b13d7694c25d09511b77edc14262025a452dfd93359c7257826f0e4c60dc6b"

ARCHITECTURES="all"

libVersion="$portVersion"

PROVIDES="
	aqbanking = $portVersion
	cmd:aqbanking_cli = $portVersion
	cmd:aqbanking_config = $portVersion
	cmd:aqebics_tool = $portVersion
	cmd:aqhbci_tool4 = $portVersion
	cmd:aqofxconnect_tool = $portVersion
	cmd:aqpaypal_tool = $portVersion
	lib:libaqbanking = $libVersion
	"

REQUIRES="
	haiku
	lib:libgmp
	lib:libgwenhywfar
	lib:libltdl
	lib:libxml2
	lib:libxmlsec1
	lib:libxslt
	lib:libz
	lib:libiconv
	lib:libintl
	lib:libgnutls
	lib:libgcrypt
	lib:libgpg_error
	"

PROVIDES_devel="
	aqbanking_devel = $portVersion
	devel:libaqbanking = $libVersion
	"

REQUIRES_devel="
	aqbanking == $portVersion base
	devel:libgmp
	devel:libxml2
	devel:libxmlsec1
	devel:libxslt
	devel:libgwenhywfar
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libgwenhywfar
	devel:libgmp
	devel:libxml2
	devel:libxmlsec1
	devel:libxslt
	"

BUILD_PREREQUIRES="
	cmd:autoreconf
	cmd:gcc
	cmd:git
	cmd:libtoolize
	cmd:make
	cmd:pkg_config
	"

BUILD()
{
	autoreconf -if
	runConfigure ./configure
	make typedefs
	make typefiles
	make $jobArgs
}

INSTALL()
{
	make install
	mkdir -p $developLibDir
	mv $libDir/lib*.la $developLibDir

	prepareInstalledDevelLibs
	fixPkgconfig

	# devel package
	packageEntries devel \
		$developDir
}
