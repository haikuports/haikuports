SUMMARY="Graphical development environment based on a BASIC interpreter"
DESCRIPTION="GAMBAS is a free development environment and a full powerful \
object-oriented language and development platform based on a Basic \
interpreter with optional just-in-time compilation, as easy as \
Visual Basicâ„¢ was."
HOMEPAGE="https://gambas.sourceforge.net/"
COPYRIGHT="2024 The Gambas Project"
LICENSE="GNU GPL v2"
REVISION="1"
SOURCE_URI="https://gitlab.com/gambas/gambas/-/archive/$portVersion/gambas-$portVersion.tar.bz2"
CHECKSUM_SHA256="dbee033e86d3557da23c9a0b3b1f4ffe332d9a7648d31341aecef6d222cac683"

ARCHITECTURES="all !x86_gcc2"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	gambas$secondaryArchSuffix = $portVersion
	app:Gambas$secondaryArchSuffix = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lib:libncurses$secondaryArchSuffix
	lib:libsqlite3$secondaryArchSuffix
	"

PROVIDES_devel="
	gambas${secondaryArchSuffix}_devel = $portVersion
	cmd:gambas$commandSuffix = $portVersion
	"
REQUIRES_devel="
	devel:libncurses$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libncurses$secondaryArchSuffix
	"
BUILD_PREREQUIRES="
	cmd:autoconf
	cmd:gcc$secondaryArchSuffix
	cmd:make
	cmd:libtool
	cmd:pkg_config$secondaryArchSuffix
	"

BUILD()
{
	./reconf-all
	runConfigure --omit-dirs binDir ./configure \
		--bindir=$commandBinDir -C
	make -j $(nproc) $jobArgs
}

INSTALL()
{
	make install
}
