SUMMARY="Extended version of the yabasic programming language"
DESCRIPTION="yab is an extended version of yabasic, a BASIC programming \
language, with special commands designed for Haiku."
HOMEPAGE="http://yab.orgfree.com/"
COPYRIGHT="1995-2006 Marc-Oliver Ihm (yabasic)
	2006-2009 Jan Bungeroth (yab improvements)
	2013-2018 Jim Saxton (yab improvements)"
LICENSE="Artistic"
REVISION="1"
SOURCE_URI="https://github.com/bbjimmy/YAB/archive/libyab1.tar.gz"
CHECKSUM_SHA256="9b76e11e0bd3f2f318f645126fd4f6171d78dc37b69ae0e2035731edcf53055e"
SOURCE_FILENAME="libyab1.tar.gz"
SOURCE_DIR="YAB-libyab1"

SOURCE_URI_2="http://yab.orgfree.com/libyab/libyab.so.zip"
CHECKSUM_SHA256_2="ec4ef57214e7fe010c3646543dc1fdbc02e9303db30e8113e518a299483a790f"


ARCHITECTURES="x86_gcc2 !x86 x86_64"

PROVIDES="
	devel:libyab = $portVersion
	lib:libyab = $portVersion
	devel:libyab1 = $portVersion
	lib:libyab1 = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	cmd:bison
	cmd:flex
	cmd:gcc
	cmd:make
	cmd:mkdepend
	"

BUILD()
{
	mkdir -p tmp
	cp -r src/* tmp
	cd tmp
	make  $jobArgs BUILDHOME=`finddir B_SYSTEM_DEVELOP_DIRECTORY`
}

INSTALL()
{
	mkdir -p $libDir
	cp tmp/libyab1.so $libDir/
	cp ../../sources-2/$targetArchitecture/libyab.so  $libDir/
	prepareInstalledDevelLibs libyab1
	prepareInstalledDevelLibs libyab

}
