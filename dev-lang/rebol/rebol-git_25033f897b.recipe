	rebol = $portVersion
	cmd:r3 = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	cmd:gcc
	cmd:make
	cmd:nm
	cmd:strip
	"

BUILD()
{
	cd make
	cp $sourceDir2/r3-make-$targetArchitecture r3-make
	chmod +x r3-make
	make make OS_ID=0.5.75
	make prep
	make
}

INSTALL()
{
	mkdir -p $binDir
	cp make/r3 $binDir
}

TEST()
{
	[ -d tests ] && rm -rf tests
	mkdir tests
	cd tests
	../make/r3 $sourceDir3/rebol-test-502075cc3a4116c1785081e602eb8e28efd3247f/run-recover.r
}
