Subject: Patch: install paths


diff --git a/install.sh b/install.sh
index 8ab08fb..78c0233 100755
--- a/install.sh
+++ b/install.sh
@@ -51,6 +51,20 @@ if [ $# -eq 1 ] ; then
       mkdir -p $bindir
       mkdir -p $configdir
       ;;
+    "haiku")
+      bindir="@BINDIR@"
+      configdir="@CONFIGDIR@"
+      libdir="@LIBDIR@"
+      docdir="@DOCDIR@"
+      datadir="@DATADIR@"
+      nimbleDir="@NIMBLEDIR@"
+      mkdir -p $bindir
+      mkdir -p $configdir
+      mkdir -p $libdir
+      mkdir -p $docdir
+      mkdir -p $datadir
+      mkdir -p $nimbleDir
+      ;;
     *)
       bindir="$1/nim/bin"
       configdir="$1/nim/config"
