BUILD()
{
	export CPPFLAGS="-D_BSD_SOURCE"
	export LIBS="-lnetwork -lbsd"

	runConfigure --omit-dirs sysconfdir ./configure \
		--with-x=no \
		--sysconfdir="$sysconfDir/R" \
		--enable-R-shlib \
		rdocdir="$docDir" \
		rincludedir=$includeDir \
		rsharedir="$dataDir/R"

	make $jobArgs
}

INSTALL()
{
	make install

	fixPkgconfig
}

TEST()
{
	make check
}
