BUILD()
{
	export CFLAGS="-D_BSD_SOURCE"
	export LDFLAGS="-lnetwork -lbsd"

	runConfigure --omit-dirs sysconfdir ./configure \
		--with-x=no \
		--sysconfdir="$settingsDir/R" \
		--enable-R-shlib \
		rdocdir="$docDir" \
		rincludedir=$includeDir \
		rsharedir="$dataDir/R"

	make $jobArgs
}

INSTALL()
{
	make install
}

TEST()
{
	make check
}
