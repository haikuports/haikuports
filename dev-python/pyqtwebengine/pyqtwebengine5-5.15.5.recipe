	devel:libQt5Gui$secondaryArchSuffix >= $qtVersion
	devel:libQt5Help$secondaryArchSuffix >= $qtVersion
	devel:libQt5Location$secondaryArchSuffix >= $qtVersion
	devel:libQt5Multimedia$secondaryArchSuffix >= $qtVersion
