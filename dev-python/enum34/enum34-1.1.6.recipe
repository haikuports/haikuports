SUMMARY="Python 3.4 Enum backported to 3.3, 3.2, 3.1, 2.7, 2.6, 2.5, and 2.4"
DESCRIPTION="An enumeration is a set of symbolic names (members) bound to \
unique, constant values. Within an enumeration, the members can be compared \
by identity, and the enumeration itself can be iterated over."
HOMEPAGE="https://bitbucket.org/stoneleaf/enum34"
COPYRIGHT="2013 Ethan Furman"
LICENSE="BSD (3-clause)"
REVISION="1"
SOURCE_URI="https://files.pythonhosted.org/packages/bf/3e/31d502c25302814a7c2f1d3959d2a3b3f78e509002ba91aea64993936876/enum34-$portVersion.tar.gz"
CHECKSUM_SHA256="8ad8c4783bf61ded74527bffb48ed9b54166685e4230386a9ed9b1279e2df5b1"

ARCHITECTURES="!x86_gcc2 x86 x86_64"

PROVIDES="
	enum34_python = $portVersion
	"
REQUIRES="
	haiku
	cmd:python2
	"

BUILD_REQUIRES="
	haiku_devel
	setuptools_python
	"
BUILD_PREREQUIRES="
	cmd:python2
	"

BUILD()
{
	$portPackageLinksDir/cmd~python2/bin/python2 setup.py build
}

INSTALL()
{
	# GENERIC: all python_setuptools-based installs need this
	python=$portPackageLinksDir/cmd~python2/bin/python2
	pythonVersion=$($python --version 2>&1 | sed 's/Python //' | head -c3)
	installLocation=$prefix/lib/python$pythonVersion/vendor-packages/
	export PYTHONPATH=$installLocation:$PYTHONPATH
	mkdir -p $installLocation

	$python setup.py build install \
		--prefix $prefix
}
