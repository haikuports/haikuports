SUMMARY="Common files for KDE's API documentation (using QDoc)"
DESCRIPTION="The common files for KDE's API documentation. Individual projects include it in \
their documentation builds.
The files in the 'global' folder are forked from Qt. We can modify them at will, however we \
should periodically sync them with upstream to incorporate improvements from there."
HOMEPAGE="https://invent.kde.org/sdk/kde-qdoc-common"
COPYRIGHT="2010-2025 KDE Organisation"
LICENSE="CC0-1.0
	BSD (3-clause)
	GNU FDL v1.3"
REVISION="1"
SOURCE_URI="https://invent.kde.org/sdk/kde-qdoc-common/-/archive/v1.0.0/kde-qdoc-common-v$portVersion.tar.bz2"
CHECKSUM_SHA256="408855864ca99719ee55a1fd41128c815758b3c54cf0e489690dadbbe9dfb358"
SOURCE_DIR="kde-qdoc-common-v1.0.0"

ARCHITECTURES="any"

PROVIDES="
	kde_qdoc_common = $portVersion
	"

BUILD_REQUIRES="
	haiku_devel
	"

INSTALL()
{
	installDir=$dataDir/kde-qdoc-common
	mkdir -p $installDir
	cp -r $sourceDir/* $installDir

	# licenses provided in package
	rm -rf $installDir/LICENSES
}
