	"
REQUIRES_devel="
	palapeli$secondaryArchSuffix == $portVersion base
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libKDEGames6$secondaryArchSuffix
	# KF6
