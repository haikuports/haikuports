SUMMARY="A barcode api"
DESCRIPTION="prison has a prison::AbstractBarcode, which is the base class  \
for the actual barcode generators, currently prison::QRCodeBarcode and \
prison::DataMatrixBarcode is the two implemented barcode generators."
HOMEPAGE="https://api.kde.org/frameworks/prison/html/index.html"
COPYRIGHT="2010-2017 KDE Foundations"
LICENSE="GNU LGPL v3"
REVISION="1"
SOURCE_URI="https://download.kde.org/stable/frameworks/5.38/prison-5.38.0.tar.xz"
SOURCE_DIR="prison-5.38.0"
CHECKSUM_SHA256="95bc65c9164b8ed8cace08be7dfdf12cc9a398a42e2b4c66852faaa1cd1f325f"
ARCHITECTURES="x86 x86_64"

PROVIDES="
	Prison = $portVersion
	lib:libKF5Prison.so = $portVersion
	lib:libkf5Prison.so.5 = $portVersion
	"
REQUIRES="
	haiku
	libdmtx
	qrencode
	qt5
	"

BUILD_REQUIRES="
	libdmtx_devel
	qt5_devel
	haiku_devel
	qrencode_devel
	extra_cmake_modules
	"
BUILD_PREREQUIRES="
	cmake
	cmd:gcc
	cmd:make
	"

BUILD()
{
	export ECM_DIR=/boot/system/data/cmake/Modules/
	cmake -DCMAKE_INSTALL_PREFIX:PATH=$libDir/cmake/ .
	make
}

INSTALL()
{
	make install
}
