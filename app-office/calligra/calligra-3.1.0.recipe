		-e "s|@LONG_INFO@|$LONG_INFO|" \
		$portDir/additional-files/karbon.rdef.in > $sourceDir/build/karbon.rdef

	addResourcesToBinaries $sourceDir/build/karbon.rdef $appsDir/Calligra/Karbon
