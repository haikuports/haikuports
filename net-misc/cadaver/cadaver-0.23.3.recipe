SUMMARY="A command line WebDAV client"
DESCRIPTION="It supports file upload, download, on-screen display, namespace operations (move/copy), collection creation and deletion, and locking operations."
HOMEPAGE="http://www.webdav.org/cadaver"
COPYRIGHT="1999-2007, Joe Orton, 
   except where otherwise indicated."
LICENSE="GNU GPL v2"
REVISION="3"	
SOURCE_URI="http://www.webdav.org/cadaver/cadaver-0.23.3.tar.gz"
CHECKSUM_SHA256="fd4ce68a3230ba459a92bcb747fc6afa91e46d803c1d5ffe964b661793c13fca"
#PATCHES=""

ARCHITECTURES="x86 x86_64"

PROVIDES="
	cadaver=$portVersion
	cmd:cadaver
	"
REQUIRES="
		haiku
		lib:libintl
		lib:libexpat
		lib:libxml2
		lib:libssl
		lib:libreadline
		lib:libncurses
		lib:libzlib
		lib:libiconv
        "
BUILD_REQUIRES="
		haiku_devel
		devel:libintl
		devel:libexpat
		devel:libxml2
		devel:libssl
		devel:libncurses
		devel:libzlib
		devel:libiconv
        "        
BUILD_PREREQUIRES="
cmd:automake 
cmd:autoconf
cmd:gcc
cmd:make
cmd:pkg_config
cmd:libtoolize
cmd:bison
"


BUILD()
{
	#./autogen.sh
	libtoolize -fci
	runConfigure ./configure
	make $jobArgs
}

INSTALL()
{
	make install
}
