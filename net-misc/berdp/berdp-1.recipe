	"

BUILD_PREREQUIRES="
	makefile_engine
	cmd:gcc
	cmd:make
	"


BUILD_REQUIRES="
	haiku_devel
	"

REQUIRES="
	haiku
	cmd:rdesktop
	"


BUILD()
{
	make $jobArgs OBJ_DIR=objects -C Source
}

INSTALL()
{
	mkdir -p $appsDir
	cp Source/objects/BeRDP $appsDir
	addAppDeskbarSymlink $appsDir/BeRDP
}
