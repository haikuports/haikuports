SUMMARY="Help File Viewer"
DESCRIPTION="HelpViewer is an application for viewing help files that use a simple html like mark-up."
HOMEPAGE="http://fatelk.com"
LICENSE="MIT"
COPYRIGHT="2017 Jim Saxton, Fat Elk Software"
SOURCE_URI="http://coquillemartialarts.com/fatelk/downloads/HelpViewer.Archive.zip#nioarchive"
CHECKSUM_SHA256="daea632cb234b8f68100a642e9ee86ea9cb21d2eaf531f0e88fa11a32957cbfa"
REVISION="2"
ARCHITECTURES="x86_gcc2 !x86 x86_64"
SECONDARY_ARCHITECTURES="x86_gcc2"
DISABLE_SOURCE_PACKAGE=yes

PROVIDES="
	helpviewer$secondaryArchSuffix = $portVersion
	app:HelpViewer = $portVersion
	cmd:helpviewer
	"

REQUIRES="
	haiku
	yab$secondaryArchSuffix >= 1.7.5
	lib:libz
	lib:libyab
	"

BUILD_REQUIRES="
	"

BUILD_PREREQUIRES="
	haiku$secondaryArchSuffix
	coreutils
	cmd:unzip
	"

SOURCE_DIR="HelpViewer"

BUILD()
{
	:
}

INSTALL()
{
	mkdir -p $appsDir/HelpViewer
	mkdir -p $binDir
	mkdir -p $dataDir/mime_db/application
	mkdir -p $dataDir/mime_db/text
	unzip  -d tmp $targetArchitecture.zip
	cp -r tmp/apps/HelpViewer/* $appsDir/HelpViewer/
	cp -r tmp/data/mime_db/text/* $dataDir/mime_db/text/
	cp -r tmp/data/mime_db/application/* $dataDir/mime_db/application/
	cp -r tmp/bin/* $binDir/
}
