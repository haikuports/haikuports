SOURCE_DIR="Globe-$srcGitRev"

ARCHITECTURES="all"

PROVIDES="
	globe = $portVersion
	app:Globe = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	makefile_engine
	cmd:gcc
	cmd:make
	"

BUILD()
{
	cd src
	make $jobArgs OBJ_DIR=objects
}

INSTALL()
{
	cd src
	mkdir -p $appsDir
	cp objects/Globe $appsDir/Globe
	addAppDeskbarSymlink $appsDir/Globe
}
