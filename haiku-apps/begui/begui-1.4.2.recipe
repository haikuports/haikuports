SUMMARY="A simple to use programmer's tool for rapid development of a program"
DESCRIPTION="BeGUI is a simple to use programmer's tool which allows for rapid development \
of a program. It is sensitive to font sizes, style and families; has a lot of \
color control preferences and had a window class which is self-sizing and \
recalls it's position from instance to instance"
HOMEPAGE="https://github.com/HaikuArchives/BeGUI"
COPYRIGHT="1999 Ed Musgrove"
LICENSE=""
REVISION="1"
srcGitRev="07fef544ab398c73404badafb63aed75cb057917"
SOURCE_URI="https://github.com/HaikuArchives/BeGUI/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="8438cca9cdaf71722f996fce6efc68f4aae99657b99c98d88202df97ed29b284"
SOURCE_FILENAME="BeGUI-$portVersion-$srcGitRev.tar.gz"
SOURCE_DIR="BeGUI-$srcGitRev"
PATCHES="begui-$portVersion.patchset"

ARCHITECTURES="x86 x86_gcc2 x86_64"

PROVIDES="
	begui = $portVersion
	app:PrefsEDgar = $portVersion
	app:ResEDfar = $portVersion
	app:Resourceful = $portVersion
	lib:libprefs = $portVersion
	lib:libBeGUI = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"

BUILD_PREREQUIRES="
	makefile_engine
	cmd:g++
	cmd:make
	"

BUILD()
{
	mkdir -p $libDir
	mkdir -p BeGUIlib/lib PrefsEDgar/lib ResEDgar/lib
	echo Created lib directories

	cd  libprefsSRC
	make -f makefile.lib
	cp objects.*/libprefs.so $libDir
	cp objects.*/libprefs.so ../BeGUIlib/lib
	cp objects.*/libprefs.so ../PrefsEDgar/lib
	cp objects.*/libprefs.so ../ResEDgar/lib
	echo Created libprefs

	cd ../BeGUIlib
	make -f makefile.lib
	cp objects.*/libBeGUI.so $libDir
	cp objects.*/libBeGUI.so lib
	cp objects.*/libBeGUI.so ../PrefsEDgar/lib
	cp objects.*/libBeGUI.so ../ResEDgar/lib
	echo Created libBeGUI

	cd ../PrefsEDgar
	make -f PrefsEDgar.makefile
	echo Created PrefsEDgar

	cd ../ResEDgar
	make -f ResEDgar.makefile
	echo Created ResEDgar

	cd ../Resourceful
	make -f Resourceful.makefile
	echo Created ResEDgar
}

INSTALL()
{
	mkdir -p $appsDir/BeBUI
	cp PrefsEDgar/objects.*/PrefsEDgar $appsDir/BeBUI/PrefsEDgar
	cp ResEDgar/objects.*/ResEDgar $appsDir/BeBUI/ResEDgar
	cp Resourceful/objects.*/Resourceful $appsDir/BeBUI/Resourceful
}
