SUMMARY="A simple stopwatch application"
DESCRIPTION="A simple stopwatch application."
HOMEPAGE="https://github.com/dcatt-haiku/StopWatch"
COPYRIGHT="2016 DCatt"
LICENSE="MIT"
REVISION="1"
SOURCE_URI="git:github.com/dcatt-haiku/StopWatch.git"

ARCHITECTURES="any"

PROVIDES="
	stopWatch = $portVersion
	app:StopWatch = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	cmd:g++
	cmd:make
	"

BUILD()
{
	make $jobArgs OBJ_DIR=objects
	make bindcatalogs OBJ_DIR=objects
}

INSTALL()
{
	stopwatchDir=$appsDir/StopWatch
	mkdir -p $stopwatchDir

	cp -af objects/StopWatch $quicklaunchDir

	addAppDeskbarSymlink $stopwatchDir/StopWatch
}
