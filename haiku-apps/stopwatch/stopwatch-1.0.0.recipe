SUMMARY="A simple stopwatch application"
DESCRIPTION="A simple stopwatch application."
HOMEPAGE="https://github.com/dcatt-haiku/StopWatch"
COPYRIGHT="2016 DCatt"
LICENSE="MIT"
REVISION="1"
SOURCE_URI="https://github.com/dcatt-haiku/StopWatch/archive/v1.0.0.tar.gz"
CHECKSUM_SHA256="e06ce79e25e77d6448e0aca94221599ce15d968de398fc748fa11b657e225953"

ARCHITECTURES="x86_gcc2 ?x86 ?x86_64"

PROVIDES="
	stopWatch = $portVersion
	app:StopWatch = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	cmd:g++
	cmd:make
	"

BUILD()
{
	make $jobArgs OBJ_DIR=objects
}

INSTALL()
{
	stopwatchDir=$appsDir/StopWatch
	mkdir -p $stopwatchDir

	cp -af objects/StopWatch $stopwatchDir

	addAppDeskbarSymlink $stopwatchDir/StopWatch
}
