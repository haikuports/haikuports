SUMMARY="Build engine source port backed by GZDoom tech"
DESCRIPTION="Raze is a fork of Build engine games backed by GZDoom tech and combines Duke Nukem 3D, \
Blood, Redneck Rampage, Shadow Warrior and Exhumed/Powerslave in a single package.

It is also capable of playing Nam and WW2 GI.

The binaries will look for .wad files in:
* ~/config/non-packaged/data/raze/data
* ~/config/non-packaged/data/raze/blood
* ~/config/non-packaged/data/raze
The binaries can be also used via command-line with the -ini command.
Example: 'Raze -ini /path/to/blood.ini'"
HOMEPAGE="https://raze.zdoom.org/about"
COPYRIGHT="2020-2025 Raze team & contributors"
LICENSE="GNU GPL v3"
REVISION="1"
srcGitRev="cb322b563d41e16bbbe4ab61a43a25c26e15b715"
SOURCE_URI="https://github.com/ZDoom/Raze/archive/$srcGitRev.zip"
CHECKSUM_SHA256="e15b207d6c9a24d5c5abc6df8515fe1f04b347e7e3bb3a867d68908f43699697"
SOURCE_DIR="Raze-$srcGitRev"
PATCHES="raze-$portVersion.patchset"
ADDITIONAL_FILES="raze.rdef.in"

ARCHITECTURES="all !x86_gcc2"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	raze$secondaryArchSuffix = $portVersion
	app:Raze = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	#lib:libatk_1.0$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	lib:libbz2$secondaryArchSuffix
	#lib:libcairo$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	lib:libexecinfo$secondaryArchSuffix
	#lib:libglib_2.0$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	#lib:libgobject_2.0$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	lib:libgomp$secondaryArchSuffix
	#lib:libharfbuzz$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	#lib:libintl$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	#lib:libgdk_pixbuf_2.0$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	#lib:libgtk_3$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	#lib:libpangocairo_1.0$secondaryArchSuffix # Optional, for GTK3 interface, needed with DYN_GTK=OFF
	lib:libSDL2_2.0$secondaryArchSuffix
	lib:libvpx$secondaryArchSuffix
	lib:libzmusic$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libbz2$secondaryArchSuffix
	devel:libexecinfo$secondaryArchSuffix
	devel:libGL$secondaryArchSuffix # For OpenGL renderer
	#devel:libgtk_3$secondaryArchSuffix # For GTK3 interface, needed with DYN_GTK=OFF, optional with DYN_GTK=ON, skipped with NO_GTK=ON
	#devel:liblzma$secondaryArchSuffix # Uses in-source one
	devel:libSDL2_2.0$secondaryArchSuffix
	devel:libvpx$secondaryArchSuffix
	devel:libzmusic$secondaryArchSuffix
	lib:libzmusic$secondaryArchSuffix
	"
BUILD_PREREQUIRES="
	cmd:cmake
	cmd:gcc$secondaryArchSuffix
	cmd:git # Optional, needed for build date
	cmd:make
	cmd:pkg_config$secondaryArchSuffix
	"

BUILD()
{
	cmake -Bbuild -S. $cmakeDirArgs \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_CXX_FLAGS="-D_GNU_SOURCE -D_BSD_SOURCE" \
		-DCMAKE_EXE_LINKER_FLAGS="-lbsd -lnetwork" \
		-DCMAKE_SHARED_LINKER_FLAGS="-lnetwork" \
		-DINSTALL_PATH=$appsDir \
		-DINSTALL_PK3_PATH=$dataDir/raze \
		-DDYN_GTK="OFF" -DNO_GTK="ON" \
		-DVULKAN_USE_XLIB="OFF"

	make -C build $jobArgs
}

INSTALL()
{
	make -C build install
	mv $appsDir/raze $appsDir/Raze

	# Copy Soundfont(s)
	mkdir -p $dataDir/raze/soundfonts && cp $sourceDir/soundfont/* $dataDir/raze/soundfonts

	# Generate the rdef
	local APP_SIGNATURE="application/x-vnd.gzdoom-raze"
	local MAJOR="`echo "$portVersion" | cut -b1`"
	local MIDDLE="`echo "$portVersion" | cut -b3,4`"
	local MINOR="`echo "$portVersion" | cut -b6`"
	sed \
		-e "s|@APP_SIGNATURE@|$APP_SIGNATURE|" \
		-e "s|@MAJOR@|$MAJOR|" \
		-e "s|@MIDDLE@|$MIDDLE|" \
		-e "s|@MINOR@|$MINOR|" \
		-e "s|@LONG_INFO@|$SUMMARY|" \
		$portDir/additional-files/raze.rdef.in > raze.rdef

	addResourcesToBinaries raze.rdef $appsDir/Raze
	addAppDeskbarSymlink $appsDir/Raze
}
