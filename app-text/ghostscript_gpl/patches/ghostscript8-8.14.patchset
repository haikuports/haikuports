+void PSView::MouseMoved(BPoint point, uint32 transit, const BMessage *msg)
+{
+	if (fDragView) {
+		BPoint position(GetMouseScreenPosition());
+		BPoint delta(fLastMousePosition - position);
+		ScrollBy(delta.x, delta.y);
+		fLastMousePosition = position;
+	}
+}
