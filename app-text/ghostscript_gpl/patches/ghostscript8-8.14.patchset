+PSView::PSView(BRect frame) 
+	: BView(frame, "PSView", B_FOLLOW_ALL_SIDES, B_WILL_DRAW | B_PULSE_NEEDED) 
+	, fPageWidth(INITIAL_WIDTH)
+	, fPageHeight(INITIAL_HEIGHT)
