+// scroll restricted within page size
+void PSView::ScrollTo(BPoint point) 
+{
+	BRect bounds(Bounds());
+	float xMax = fPageWidth - bounds.Width();
+	float yMax = fPageHeight - bounds.Height();
+	
+	if (xMax < 0) xMax = 0;	
+	if (yMax < 0) yMax = 0;
+	
+	if (point.x < 0) {
+		point.x = 0;
+	} else if (point.x > xMax) {
+		point.x = xMax;
+	}
+	
+	if (point.y < 0) {
+		point.y = 0;
+	} else if (point.y > yMax)  {
+		point.y = yMax;
+	}
+		
+	BView::ScrollTo(point); 
+}
