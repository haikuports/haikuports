PATCH()
{
	sed -i "s|share/dblatex|$relativeDataDir/dblatex|
		s|share/doc/dblatex|$relativeDocDir|
		s|share/man|$relativeManDir|" setup.py
}

BUILD()
{
	rm -rf build
	python3 setup.py build
}

INSTALL()
{
	python3 setup.py install --prefix="$prefix"
}
