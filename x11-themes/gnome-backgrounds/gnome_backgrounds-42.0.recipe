SUMMARY="GNOME default icon theme"
DESCRIPTION="A set of backgrounds packaged with the GNOME desktop."
HOMEPAGE="https://gitlab.gnome.org/GNOME/gnome-backgrounds/"
COPYRIGHT="Jakub Steiner "
LICENSE="CCBYSA"
REVISION="1"
SOURCE_URI="https://gitlab.gnome.org/GNOME/gnome-backgrounds/-/archive/$portVersion/gnome-backgrounds-$portVersion.tar.gz"
CHECKSUM_SHA256="6f9abf8aa62fb221907d46d582a922a018bf994a9e36531ec46de1fc60f4facd"
SOURCE_DIR="gnome-backgrounds-$portVersion"

ARCHITECTURES="any"
DISABLE_SOURCE_PACKAGE="yes"

PROVIDES="
	gnome_backgrounds = $portVersion
	"
	
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	cmd:cp
	cmd:rm
	"

BUILD()
{
	true
}

INSTALL()
{
	backgroundsDir=$dataDir/artwork/gnome-backgrounds
	mkdir -p $backgroundsDir
	cp backgrounds/*.jpg -R $backgroundsDir
	cp backgrounds/*.png -R $backgroundsDir
}
