	cmd:aclocal
	cmd:make
	cmd:gcc$secondaryArchSuffix
	cmd:ld$secondaryArchSuffix
	cmd:pkg_config$secondaryArchSuffix
	cmd:python
	"

PATCHES="libxcb-1.6.patch"

BUILD()
{
	libtoolize --force --copy --install
	./autogen.sh -V
	runConfigure ./configure
}

INSTALL()
{
	make install
	prepareInstalledDevelLibs libxcb \
		libxcb-composite \
		libxcb-damage \
		libxcb-dpms \
		libxcb-dri2 \
