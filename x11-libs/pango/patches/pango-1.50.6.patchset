+      g_assert ((pango_attribute_as_shape (attr)) !=NULL);
       break;
     case FLOAT:
-      g_assert_nonnull (pango_attribute_as_float (attr));
+      g_assert ((pango_attribute_as_float (attr)) !=NULL);
       break;
     case FONT_FEATURES:
