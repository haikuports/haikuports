+      g_assert ((pango_attribute_as_font_desc (attr)) !=NULL);
       break;
     case COLOR:
-      g_assert_nonnull (pango_attribute_as_color (attr));
+      g_assert ((pango_attribute_as_color (attr)) !=NULL);
       break;
     case SHAPE:
