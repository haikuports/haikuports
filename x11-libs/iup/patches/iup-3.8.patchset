+    {
+      if (value)
+        beLabelSetPixbuf(ih, value, 0);
+      else
+      {
+        /* if not defined then automaticaly create one based on IMAGE */
+        char* name = iupAttribGet(ih, "IMAGE");
+        beLabelSetPixbuf(ih, name, 1); /* make_inactive */
+      }
+    }
+    return 1;
+  }
+  else
+    return 0;
