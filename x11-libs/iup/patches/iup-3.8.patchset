+    menu->Menu()->AddItem(new BMenuItem(value, NULL));
+	return;
+  }
+
+  BListView* listview = iuphaikuGetListView(view);
+
+  if(listview)
+  {
+    BListItem* item = new BStringItem(value);
+	listview->LockLooper();
+    listview->AddItem(item);
+	listview->UnlockLooper();
+  } else {
