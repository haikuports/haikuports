+static void xGLCanvasUnMapMethod(Ihandle* ih)
+{
+  IGlControlData* gldata = (IGlControlData*)iupAttribGet(ih, "_IUP_GLCONTROLDATA");
+#if 0
+  if (gldata->context)
+  {
+    if (gldata->context == glXGetCurrentContext())
+      glXMakeCurrent(gldata->display, None, NULL);
+
