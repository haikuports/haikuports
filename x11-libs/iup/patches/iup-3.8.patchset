+		{
+		}
+
+	  	void MessageReceived(BMessage* message)
+		{
+			Ihandle* ih = NULL;
+			message->FindPointer("iHandle", (void**)&ih);
+
+			switch(message->what) {
+	  			case timerFire:
+					iuphaikuTimerFired(ih);
