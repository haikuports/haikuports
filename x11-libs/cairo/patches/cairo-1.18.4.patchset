+++ b/src/cairo-xlib-surface.c
@@ -79,7 +79,9 @@
 
 #include <X11/extensions/XShm.h>
 #include <sys/ipc.h>
+#ifndef __HAIKU__
 #include <sys/shm.h>
+#endif
 
 #define DEBUG 0
 
