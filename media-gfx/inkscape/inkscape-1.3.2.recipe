	lib:libz$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	boehm_gc${secondaryArchSuffix}_devel
	devel:libboost_filesystem$secondaryArchSuffix >= 1.85.0
