        "

BUILD_PREREQUIERS="
	cmd:g++$secondaryArchSuffix
	cmd:cmake
	cmd:pkg_config$secondaryArchSuffix
	cmd:ninja
	"

BUILD()
{
	ln -s ../../sources-2/simpleini-$srcGitRev_2/ ./third_party/simpleini/
	ln -s ../../sources-3/duktape-$srcGitRev_3/ ./third_party/duktape/
	ln -s ../../sources-4/clip-$srcGitRev_4/ ./src/clip/
	ln -s ../../sources-5/flic-$srcGitRev_5/ ./src/flic/
	ln -s ../../sources-6/observable-$srcGitRev_6/ ./src/observable/
	ln -s ../../sources-7/undo-$srcGitRev_7/ ./src/undo/
	cmake -G Ninja .
	ninja libresprite
}

INSTALL()
{
	ninja install
}

