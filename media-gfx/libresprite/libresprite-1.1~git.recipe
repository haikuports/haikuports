		libsdl2_devel$secondaryArchSuffix
		sdl2_image_devel$secondaryArchSuffix
		xlibe_devel$secondaryArchSuffix
		v8_devel$secondaryArchSuffix
		libarchive_devel$secondaryArchSuffix
