BUILD()
{
	./autogen.sh
	runConfigure --omit-dirs "dataDir binDir" ./configure CPPFLAGS=-D_BSD_SOURCE \
		--datadir=$developDocDir --bindir=$prefix/bin \
		--enable-shared \
		--disable-perl

	make $jobArgs
}

INSTALL()
{
	make install

	#remove libtool files
	rm $libDir/*.la
	rm $libDir/graphviz/*.la

	prepareInstalledDevelLibs $graphvizLibs
	fixPkgconfig

	packageEntries devel \
		$developDir \
		$manDir/man3
}

TEST()
{
	make check
}
