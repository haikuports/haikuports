BUILD()
{
	libtoolize -fci
	autoconf
	runConfigure ./configure \
		CPPFLAGS=`pkg-config --cflags freetype2` \
		LDFLAGS=`pkg-config --libs freetype2` \
		--enable-shared \
		--disable-perl

	make $jobArgs
}

INSTALL()
{
	make install
	packageEntries devel \
		$developDir
}
