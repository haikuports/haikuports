SUMMARY="Haiku color and icontheme for Qupzilla"
DESCRIPTION="
Using icons from the Haiku project and zumi \
( http://zumi.xoom.it/myhaiku/btoolbar/index.html )."
HOMEPAGE="https://github.com/miqlas/Qupzilla-Haiku"
COPYRIGHT="Haiku Project \
zumi"
LICENSE="MIT"
REVISION="1"
SOURCE_URI="https://github.com/miqlas/Qupzilla-Haiku/archive/0.0.1.tar.gz"
CHECKSUM_SHA256="2e8437c44c17f74d53ec26afc7535215e7aa337c7a994432d0e826ab9add8c80"
SOURCE_DIR="Qupzilla-Haiku-$portVersion"

ARCHITECTURES="any"
DISABLE_SOURCE_PACKAGE=yes

PROVIDES="
	qupzilla_haiku_theme = $portVersion
	"
REQUIRES="
	app:qupzilla$secondaryArchSuffix
	"
BUILD_REQUIRES="
	"
BUILD_PREREQUIRES="
	coreutils
	"

INSTALL()
{
	mkdir -p $appsDir/QupZilla/themes
	cp -dR $sourceDir/haiku $appsDir/QupZilla/themes
}
