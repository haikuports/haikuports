srcGitRev="61f825e393d4107ee858c71990680596b1aefe8b"
SOURCE_URI="https://github.com/haiku/userguide/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="edb2fcdd6a53723137a3ad3eddd7a4ec6adcdb415367b48a746952c5a404d1da"
