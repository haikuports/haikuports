ARCHITECTURES="any"
DISABLE_SOURCE_PACKAGE="yes"

PROVIDES="
	haiku_welcome = $portVersion
	"

BUILD_PREREQUIRES="
	"

INSTALL()
{
	docsDir=$prefix/documentation
	mkdir -p $docsDir
	cp -R welcome $docsDir
}
