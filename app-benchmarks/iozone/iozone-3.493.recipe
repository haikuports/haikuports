ARCHITECTURES="all"

PROVIDES="
	iozone = $portVersion
	cmd:fileop = $portVersion
	cmd:iozone = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	cmd:cc
	cmd:make
	"
BUILD_PREREQUIRES="
	haiku_devel
	"

BUILD()
{
	cd src/current/
	make haiku
}

INSTALL()
{
	mkdir -p $binDir $manDir/man1
	cd src/current/
	cp iozone $binDir
	cp fileop $binDir

	cp ../../docs/iozone.1 $manDir/man1
}
