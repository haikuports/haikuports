ARCHITECTURES="x86_gcc2 ?x86 x86_64"

PROVIDES="
	cmd:iozone = $portVersion
	cmd:fileop = $portVersion
	iozone = $portVersion
	"
REQUIRES="
	haiku
	"
BUILD_REQUIRES="
	cmd:make
	cmd:cc
	"
BUILD_PREREQUIRES="
	haiku_devel
	"

BUILD()
{
	cd src/current/
	make haiku
}

INSTALL()
{
	mkdir -p $binDir $manDir/man1
	cd src/current/
	cp iozone $binDir
	cp fileop $binDir

	cp ../../docs/iozone.1 $manDir/man1
}
