+static BOOL process_attach(void)
+{
+    if (!HaikuStartApplication()) return FALSE;
+    if ((thread_data_tls_index = TlsAlloc()) == TLS_OUT_OF_INDEXES) return FALSE;
+    init_user_driver();
+    return TRUE;
