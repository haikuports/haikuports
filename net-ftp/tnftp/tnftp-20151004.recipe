SUMMARY="NetBSD luke FTP client"
DESCRIPTION="NetBSD FTP client with several advanced features"
HOMEPAGE="ftp://ftp.netbsd.org/pub/NetBSD/misc/tnftp/"
SOURCE_URI="http://ftp.NetBSD.org/pub/NetBSD/misc/tnftp/tnftp-20151004.tar.gz"
REVISION="1"
CHECKSUM_SHA256="c94a8a49d3f4aec1965feea831d4d5bf6f90c65fd8381ee0863d11a5029a43a0"

ARCHITECTURES="x86_64 x86 x86_gcc2"

PROVIDES="
	ntftp = $portVersion
	cmd:tnftp
	"

PATCHES="tnftp-20151004.patch"

REQUIRES="
	haiku
	lib:libncurses
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libncurses
	"

BUILD_PREREQUIRES="
	cmd:libtoolize
	cmd:aclocal
	cmd:autoconf
	cmd:automake
	cmd:autoheader
	cmd:make
	cmd:gcc
	cmd:ld
	"

BUILD()
{
	export LDFLAGS="-lnetwork"
	export CFLAGS="-D_BSD_SOURCE"

	libtoolize --force --copy --install
	aclocal
	autoconf
	automake --add-missing
	autoheader
	runConfigure ./configure
	make
}

INSTALL()
{
	make install
}
