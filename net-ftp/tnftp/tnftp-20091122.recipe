BUILD()
{
	cd tnftpd-20091122
	libtoolize --force --copy --install
	aclocal
	autoconf
	automake
	autoheader
	./configure --prefix=`finddir B_COMMON_DIRECTORY`
	make
}

INSTALL()
{
	cd tnftpd-20091122
	make install
}
