	git == $portVersion base
	cmd:cvsps
	"
REQUIRES_daemon="
	haiku
	lib:libcrypto
	lib:libiconv
	lib:libintl
	lib:libpcre2_8
	lib:libz
	git == $portVersion base
	"
REQUIRES_email="
	haiku
	git == $portVersion base
	"
REQUIRES_svn="
