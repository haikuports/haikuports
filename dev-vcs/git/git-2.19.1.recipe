	cmd:man
	cmd:nano
	cmd:perl >= 5
	cmd:python
	lib:libcurl
	lib:libexpat
	lib:libiconv
	lib:libintl
	lib:libpcre2_8
	lib:libssl
	lib:libz
	vendor_perl
	"
