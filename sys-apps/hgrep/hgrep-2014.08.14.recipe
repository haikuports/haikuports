SUMMARY="Front-end for grep"
DESCRIPTION="Hgrep is a trivial, but cute, front-end for grep. \
It takes the results of the grep and highlights the word that was \
searched for."
HOMEPAGE="https://www.acme.com/software/hgrep/"
COPYRIGHT="1988,1989,1991, Jef Poskanzer"
LICENSE="MIT"
REVISION="1"
SOURCE_URI="https://www.acme.com/software/hgrep/hgrep_14Aug2014.tar.gz"
CHECKSUM_SHA256="a02d753f40f0c22a313239deac29fa755c3e97ac0ae8813eaed96c0be7ac6179"
SOURCE_DIR="hgrep"
PATCHES="hgrep-$portVersion.patchset"

ARCHITECTURES="any"

PROVIDES="
	hpgrep
	cmd:hgrep
	"
REQUIRES="
	haiku
	lib:libncurses
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libncurses
	"
BUILD_PREREQUIRES="
	cmd:gcc
	cmd:make
	"

BUILD()
{
	make $jobArgs
}

INSTALL()
{
	mkdir -p $binDir $manDir/man1/
	cp hgrep $binDir
	cp hgrep.1 $manDir/man1/
}

