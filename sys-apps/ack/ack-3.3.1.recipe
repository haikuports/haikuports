SUMMARY="A grep-like text finder"
DESCRIPTION="ack is designed as an alternative to grep for programmers."
HOMEPAGE="https://beyondgrep.com/"
COPYRIGHT="2005-2020 Andy Lester"
LICENSE="Artistic"
REVISION="2"
SOURCE_URI="https://cpan.metacpan.org/authors/id/P/PE/PETDANCE/ack-v$portVersion.tar.gz"
CHECKSUM_SHA256="ae3b62049f046139470933e460f2434f881f522b6b2c2b4a94cd624fef4fd589"
SOURCE_DIR="ack-v$portVersion"

ARCHITECTURES="any"

PROVIDES="
	ack = $portVersion
	cmd:ack
	"
REQUIRES="
	haiku
	file_next
	vendor_perl
	"

BUILD_REQUIRES="
	haiku_devel
	file_next >= 1.18
	"
BUILD_PREREQUIRES="
	cmd:make
	cmd:perl
	"

BUILD()
{
	perl Makefile.PL PREFIX=$prefix
	make
}

INSTALL()
{
	make install DESTDIR="${DESTDIR}"
}
