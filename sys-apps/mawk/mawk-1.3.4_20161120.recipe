COPYRIGHT="2009-2014 Thomas E. Dickey"
LICENSE="GNU GPL v2"
REVISION="1"
SOURCE_URI="ftp://invisible-island.net/mawk/mawk-1.3.4-20161120.tgz"
CHECKSUM_SHA256="361ec1bb4968c1f1f3b91b77493cf11b31c73ff8516f95db30e4dc28de180c1e"
