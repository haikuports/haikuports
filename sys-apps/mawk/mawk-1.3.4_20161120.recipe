ARCHITECTURES="x86_gcc2 x86 x86_64 arm ppc"

PROVIDES="
	mawk = $portVersion compat >= 1
	cmd:awk = $portVersion compat >= 1
	cmd:mawk = $portVersion compat >= 1
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	"
BUILD_PREREQUIRES="
	haiku_devel
	cmd:aclocal
	cmd:autoconf
	cmd:automake
	cmd:gcc
	cmd:ld
	cmd:libtoolize
	cmd:make
	cmd:makeinfo
