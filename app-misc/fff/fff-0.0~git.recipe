SUMMARY="A simple file manager written in bash"
DESCRIPTION="Features:

* Fast
* Minimal (~100 lines of bash)
* Smooth Scrolling (using vim keybindings)
* File Operations (copy, paste, rename, cut, delete)
* Basic Search"
HOMEPAGE="https://github.com/dylanaraps/fff"
COPYRIGHT="2016-2018 Dylan Araps"
LICENSE="MIT"
REVISION="1"
srcGitRev="339e1e9bb8d7d0238733be27c43017e47c532f40"
SOURCE_URI="$HOMEPAGE/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="bf0015addd12ca2ed540fe304b1cf8b31da162e336d94cfa5bb696b61c43cb7c"
SOURCE_FILENAME="fff-$srcGitRev.tar.gz"
SOURCE_DIR="fff-$srcGitRev"

ARCHITECTURES="any"

GLOBAL_WRITABLE_FILES="
	cache/fff/trash directory
	"

PROVIDES="
	fff = $portVersion
	cmd:fff
	"
REQUIRES="
	bash
	haiku
	"

INSTALL()
{
	install -D -m755 fff $binDir/fff
	sed -i 's|~/\.cache|$(finddir B_USER_CACHE_DIRECTORY)|
		s/darwin\*/@(darwin*|haiku)/' $binDir/fff
	install -D -m644 fff.1 $manDir/man1/fff.1
	sed -i 's|\.cache|config/cache|' $manDir/man1/fff.1
	install -D -m644 {CONTRIBUTING,README}.md -t $docDir
}
