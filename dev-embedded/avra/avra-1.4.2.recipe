ARCHITECTURES="all"

PROVIDES="
	avra = $portVersion
	cmd:avra
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	cmd:gcc
	cmd:make
	"

BUILD()
{
	make PREFIX=$prefix TARGET_INCLUDE_PATH=$includeDir $jobArgs
}

INSTALL()
{
	make PREFIX=$prefix TARGET_INCLUDE_PATH=$includeDir install
}

TEST()
{
	make check
}
