SUMMARY="A Steganography Program"
DESCRIPTION="Steghide is a steganography program that \
is able to hide data in various kinds of image and \
audio files. The color respectivly sample-frequencies \
are not changed thus making the embedding resistant \
against first-order statistical tests."
HOMEPAGE="http://steghide.sourceforge.net/"
COPYRIGHT="2001-2003 Stefan Hetzl"
LICENSE="GNU GPL v2"
REVISION="1"
SOURCE_URI="https://downloads.sourceforge.net/steghide/steghide-$portVersion.tar.bz2"
CHECKSUM_SHA256="8cf5ce27d21490c24eedf91e0ac2bc4a748ba8f4eb20cb7c1fc9442d2d580008"
PATCHES="steghide-$portVersion.patchset"

ARCHITECTURES="x86_gcc2 x86 x86_64"

PROVIDES="
	steghide = $portVersion
	cmd:steghide = $portVersion
	"
REQUIRES="
	haiku
	lib:libintl
	lib:libjpeg
	lib:libmhash
	lib:libmcrypt
	lib:libz
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libintl
	devel:libjpeg
	devel:libmhash
	devel:libmcrypt
	devel:libz
	"
BUILD_PREREQUIRES="
	cmd:aclocal
	cmd:autoreconf
	cmd:gcc
	cmd:gettext
	cmd:libtoolize
	cmd:make
	"

BUILD()
{
	touch ./NEWS
	touch ./AUTHORS
	touch ./ChangeLog
	autoreconf -vfi
	runConfigure ./configure
	make $jobArgs
}

INSTALL()
{
	make install
}

TEST()
{
	make check
}
