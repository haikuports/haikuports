TEST_REQUIRES="
	cmd:ssh
	"

BUILD()
{
	autoreconf -vfi
	runConfigure ./configure \
		--libexecdir=$libDir/gnupg \
		--enable-wks-tools \
		--with-bzip2
	make $jobArgs
	make -C doc html
}

INSTALL()
{
	make install
	make -C doc install-html
	# Extra tools, gentoo does the same
	for f in convert-from-106 gpg-check-pattern lspgpot gpgconf gpgsplit \
		gpg-check-pattern mail-signed-keys make-dns-cert; do
		cp -r tools/$f $binDir/
	done
}

TEST()
{
	# FAIL: t-timestuff, t-gettime
	make check
}
