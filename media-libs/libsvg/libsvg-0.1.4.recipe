SUMMARY="A library for SVG files"
DESCRIPTION="libsvg provides a parser for SVG content in files or buffers."
HOMEPAGE="https://cairographics.org"
COPYRIGHT="Raph Levien
	Carl Worth"
LICENSE="GNU LGPL v2"
REVISION="1"
SOURCE_URI="https://cairographics.org/snapshots/libsvg-$portVersion.tar.gz"
CHECKSUM_SHA256="4c3bf9292e676a72b12338691be64d0f38cd7f2ea5e8b67fbbf45f1ed404bc8f"
PATCHES="libsvg-$portVersion.patchset"

ARCHITECTURES="!x86_gcc2 x86 x86_64"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	libsvg$secondaryArchSuffix = $portVersion
	lib:libsvg$secondaryArchSuffix = 1.0.0 compat >= 1
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lib:libpng16$secondaryArchSuffix
	lib:libjpeg$secondaryArchSuffix
	lib:libxml2$secondaryArchSuffix
	lib:libz$secondaryArchSuffix
	"

PROVIDES_devel="
	libsvg${secondaryArchSuffix}_devel = $portVersion
	devel:libsvg$secondaryArchSuffix = 1.0.0 compat >= 1
	"
REQUIRES_devel="
	libsvg$secondaryArchSuffix == $portVersion base
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libpng$secondaryArchSuffix
	devel:libjpeg$secondaryArchSuffix
	devel:libxml2$secondaryArchSuffix
	devel:libz$secondaryArchSuffix
	"
BUILD_PREREQUIRES="
	cmd:aclocal
	cmd:autoreconf
	cmd:automake
	cmd:gcc$secondaryArchSuffix
	cmd:libtoolize$secondaryArchSuffix
	cmd:make
	cmd:pkg_config$secondaryArchSuffix
	"

BUILD()
{
	libtoolize --force --copy --install
	aclocal -I m4
	automake --add-missing
	autoreconf
	runConfigure ./configure
	make $jobArgs
}

INSTALL()
{
	make install

	rm $libDir/libsvg.la

	prepareInstalledDevelLibs libsvg
	fixPkgconfig

	packageEntries devel $developDir
}
