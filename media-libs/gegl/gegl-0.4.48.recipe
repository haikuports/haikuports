BUILD()
{
	meson \
		--buildtype=release \
		--prefix=$prefix \
		--libdir=$libDir \
		--libexecdir=$binDir \
		--datadir=$dataDir \
		--localedir=$dataDir/locale \
		--includedir=$includeDir \
		--sysconfdir=$settingsDir \
		-Dintrospection=false \
		-Dpango=enabled \
		-Dpangocairo=enabled \
		_build

	cd _build
	ninja
}

INSTALL()
{
	cd _build
	ninja install

	rm $libDir/gegl-0.4/*.json

	prepareInstalledDevelLibs libgegl-0.4 libgegl-sc-0.4 libgegl-npd-0.4
	fixPkgconfig

	# devel package
	packageEntries devel \
		$dataDir \
		$developDir
}
