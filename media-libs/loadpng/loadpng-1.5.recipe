SUMMARY="Reference library for working with PNG files"
DESCRIPTION="Some glue that makes it easy to use libpng to load and save bitmaps from \
Allegro programs."
HOMEPAGE="http://tjaden.strangesoft.net/loadpng/"
COPYRIGHT="1997-2004 Psyk Software."
LICENSE="Public Domain"
REVISION="1"
SOURCE_URI="http://tjaden.strangesoft.net/loadpng/loadpng-1.5.tar.gz"
CHECKSUM_SHA256="ba0e496e5368de70e6df43cb5500468cda402e63ab95b6a466e29ec6b795b7d7"
SOURCE_DIR="loadpng-$portVersion"

ARCHITECTURES="x86_gcc2 x86_64"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	loadpng$secondaryArchSuffix = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lib:libpng16$secondaryArchSuffix
	lib:allegro$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
 	cmd:gcc$secondaryArchSuffix
	cmd:make
	"

BUILD()
{
	make
}

INSTALL()
{
	make install DESTDIR=$prefix
}
