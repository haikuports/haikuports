SUMMARY="...a powerful, fast and reliable backup & sync tool."
DESCRIPTION="luckybackup is GUI frontend for rsync \
It relies on librsync for compression of network \
communication and of the backups itself."
HOMEPAGE="https://sourceforge.net/projects/luckybackup/"
COPYRIGHT="2008-2017	Loukas Avgeriou	"
LICENSE="GNU GPL v3"
REVISION="1"
SOURCE_URI="https://sourceforge.net/projects/luckybackup/files/0.4.9/source/luckybackup-0.4.9.tar.gz"
CHECKSUM_SHA256=""
SOURCE_DIR="luckybackup"


ARCHITECTURES="x86_gcc2 x86_64"


PROVIDES="
	burp = $portVersion
	cmd:bedup
	cmd:burp
	cmd:burp_ca
	cmd:vss_strip
	"
REQUIRES="
	haiku
	lib:libncurses
	lib:libpopt
	lib:librsync
	lib:libssl
	lib:libz
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libncurses
	devel:libpopt
	devel:librsync
	devel:libssl
	devel:libz
	"
BUILD_PREREQUIRES="
	cmd:gawk
	cmd:gcc
	cmd:make
	cmd:sed
	"

BUILD()
{
  qmake
	make $jobArgs
}


INSTALL()
{
	sed -i "s/\$(DESTDIR)\/var\//$escapedSharedStateDir\//g" Makefile
	make install
}
