BUILD()
{
	true
}

INSTALL()
{
	spellDir=$dataDir/hunspell
	mkdir -p $spellDir
	cp */{af_*,an_*,ar*,be_*,bg_*,bn_*,bo*,br_*,bs_*,dictionaries/ca*,en_*,de_*,fr*,nl_*} \
			$spellDir

	packageEntries af \
		$spellDir/af*

	packageEntries an \
		$spellDir/an*

	packageEntries ar \
		$spellDir/ar*

	packageEntries be \
		$spellDir/be*

	packageEntries bg \
		$spellDir/bg*

	packageEntries bn \
		$spellDir/bn*

	packageEntries bo \
		$spellDir/bo*

	packageEntries br \
		$spellDir/br*

	packageEntries bs \
		$spellDir/bs*

	packageEntries ca \
		$spellDir/ca*

	packageEntries de \
		$spellDir/de*

	packageEntries fr \
		$spellDir/fr*

	packageEntries nl \
		$spellDir/nl*
}
