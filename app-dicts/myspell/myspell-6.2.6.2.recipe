SUMMARY="English dictionaries for hunspell/myspell"
DESCRIPTION="Libreoffice languages files used by hunspell/myspell."
HOMEPAGE="https://www.libreoffice.org/"
COPYRIGHT="2000-2017 Kevin Atkinson
	Geoff Kuenning's
	nemeth AT OOo"
LICENSE="BSD (3-clause)
	MIT
	GNU LGPL v3
	GNU GPL v2"
REVISION="1"
SOURCE_URI="https://github.com/LibreOffice/dictionaries/archive/libreoffice-$portVersion.tar.gz"
CHECKSUM_SHA256="b39a0453a3b0f6c337bd784b032e9af7d2575e81b3639b7f1715d2e64198c023"
SOURCE_DIR="dictionaries-libreoffice-6.2.6.2"

ARCHITECTURES="any"

PROVIDES="
	myspell = $portVersion
	myspell_en = $portVersion
	"
REQUIRES="
	"

SUMMARY_de="German dictionaries for hunspell/myspell"
PROVIDES_de="
	myspell_de = $portVersion
	"

SUMMARY_nl="Dutch dictionaries for hunspell/myspell"
PROVIDES_nl="
	myspell_nl = $portVersion
	"

BUILD()
{
	true
}

INSTALL()
{
	spellDir=$dataDir/hunspell
	mkdir -p $spellDir
	cp */{en_*,de_*,nl_*} $spellDir

	packageEntries de \
		$spellDir/de*

	packageEntries nl \
		$spellDir/nl*
}
