	cmd:bison
	cmd:flex
	cmd:gcc$secondaryArchSuffix
	cmd:make
	"

BUILD()
{
	make $jobArgs
}

INSTALL()
{
	mkdir -p $prefix/bin
	cp exobasic exomizer $prefix/bin
}
