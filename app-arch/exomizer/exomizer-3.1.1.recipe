	exomizer$secondaryArchSuffix = $portVersion
	cmd:exobasic
	cmd:exomizer
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	"
