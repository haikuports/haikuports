ARCHITECTURES="any"
DISABLE_SOURCE_PACKAGE="yes"

PROVIDES="msttcorefonts = $portVersion"
REQUIRES=""

BUILD_REQUIRES=""
BUILD_PREREQUIRES="
	coreutils
	cmd:cabextract
	cmd:find
	"

BUILD()
{
	for i in `ls -d ../sources*`; do
		pushd $i
		mkdir -p cabcontents
		cabextract --lowercase --directory=cabcontents *.exe
		popd
	done
}

INSTALL()
{
	FONTDIR=$fontsDir/ttfonts
	mkdir -p ${FONTDIR}
	cp `find ../sources* -type f -name \*.ttf` ${FONTDIR}
}
