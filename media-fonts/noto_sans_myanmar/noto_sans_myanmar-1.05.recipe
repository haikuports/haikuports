CHECKSUM_SHA256="5d4df9b779e0cde386adf8a10c87e8c27c21e50d2edcb64d064d2ff832cd9d70"
LICENSE="Apache v2"
COPYRIGHT="2013 Google Inc."
REVISION="1"
ARCHITECTURES="any"
DISABLE_SOURCE_PACKAGE=yes
PROVIDES="
	noto_sans_${LANG_LC}=$portVersion
	"
REQUIRES=" "
BUILD_REQUIRES=" "
BUILD_PREREQUIRES="
	coreutils
	"
SOURCE_DIR=""

BUILD()
{
	true
}

INSTALL()
{
	FONTDIR=$fontsDir/ttfonts
	mkdir -p ${FONTDIR}
	
	cp *.ttf ${FONTDIR}
}
