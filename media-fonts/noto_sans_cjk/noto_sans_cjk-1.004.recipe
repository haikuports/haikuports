INSTALL()
{
	FONTDIR=$fontsDir/otfonts
	mkdir -p ${FONTDIR}

	cp ../sources*/*.otf ${FONTDIR}

	packageEntries jp \
		${FONTDIR}/*CJKjp*.otf

	packageEntries kr \
		${FONTDIR}/*CJKkr*.otf

	packageEntries sc \
		${FONTDIR}/*CJKsc*.otf

	packageEntries tc \
		${FONTDIR}/*CJKtc*.otf
}
