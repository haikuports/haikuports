COPYRIGHT="1991 Oracle and/or its affiliates. All rights reserved.
	1985, 1987, 1988, 1990, 1991, 1993-1996, 1998 The Open Group
	1987 Digital Equipment Corporation, Maynard, Massachusetts.
	1987 Apollo Computer Inc., Chelmsford, Massachusetts.
	1989 Hewlett-Packard Company.
	1999 The XFree86 Project Inc."
LICENSE="MIT (no promotion)"
REVISION="4"
SOURCE_URI="https://www.x.org/archive/individual/proto/xproto-$portVersion.tar.bz2"
CHECKSUM_SHA256="c6f9747da0bd3a95f86b17fb8dd5e717c8f3ab7f0ece3ba1b247899ec1ef7747"
PATCHES="xproto-$portVersion.patchset"

ARCHITECTURES="x86_gcc2 x86 x86_64"
SECONDARY_ARCHITECTURES="x86_gcc2 x86"

PROVIDES="
	xproto$secondaryArchSuffix = $portVersion
	devel:xproto$secondaryArchSuffix = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:util_macros
	devel:xorg_sgml_doctools
	docbook_xml_dtd
	docbook_xsl_stylesheets
	"
BUILD_PREREQUIRES="
	cmd:autoconf
	cmd:aclocal
	cmd:awk
	cmd:gcc$secondaryArchSuffix
	cmd:make
	cmd:pkg_config$secondaryArchSuffix
	cmd:xmlto
	cmd:xsltproc
	"

BUILD()
{
	autoreconf -vfi
	runConfigure ./configure
	make $jobArgs
}

INSTALL()
{
	make install
	fixPkgconfig
	rmdir $libDir
}
