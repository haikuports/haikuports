PATCHES="nmap-$portVersion.patchset"

ARCHITECTURES="all"

PROVIDES="
	nmap = $portVersion
	cmd:nmap = $portVersion
	"
REQUIRES="
	haiku
	lib:libpcap
	lib:libpcre
	lib:libssl
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libpcap
	devel:libpcre
	devel:libssl
	"
BUILD_PREREQUIRES="
	cmd:gcc
	cmd:ld
	cmd:libtoolize
	cmd:make
	"

BUILD()
{
	libtoolize --force --copy --install
	pushd nsock/src
	libtoolize --force --copy --install
	popd

	runConfigure --omit-dirs "dataRootDir docDir" \
		./configure LDFLAGS=-lnetwork --without-nmapfe
	make $jobArgs
}

INSTALL()
{
	make $jobArgs install
	rm -rf $prefix/share
}
