SUMMARY="A library for handling mail messages and newsgroup articles"
DESCRIPTION="KMime deals solely with the in-memory representation of messages, \
topics such a transport or storage."
HOMEPAGE="https://github.com/KDE/kmime"
COPYRIGHT="2010-2017 KDE Organisation"
LICENSE="GNU LGPL v2"
REVISION="1"
SOURCE_URI="https://github.com/KDE/kmime/archive/v$portVersion.tar.gz"
CHECKSUM_SHA256="ffbc134ca851fb5d7535525cd6cfb8d7de05b05f5a0c144c65eb4c58689f7961"
SOURCE_FILENAME="kmime-$portVersion.tar.gz"
ARCHITECTURES="!x86_gcc2 x86_64"
SECONDARY_ARCHITECTURES="x86"

libVersion="5.7.0"
libVersionCompat="$libVersion compat >= ${libVersion%%.*}"

PROVIDES="
	kmime$secondaryArchSuffix = $portVersion
	lib:libKF5Mime$secondaryArchSuffix = $libVersionCompat
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lib:libKF5Codecs$secondaryArchSuffix
	lib:libKF5I18n$secondaryArchSuffix
	lib:libQt5Core$secondaryArchSuffix
	"

PROVIDES_devel="
	kmime${secondaryArchSuffix}_devel = $portVersion
	devel:libKF5Mime$secondaryArchSuffix = $libVersionCompat
	"
REQUIRES_devel="
	kmime$secondaryArchSuffix == $portVersion base
	"

BUILD_REQUIRES="
	extra_cmake_modules >= 5.39
	haiku${secondaryArchSuffix}_devel
	devel:libKF5Codecs$secondaryArchSuffix
	devel:libKF5I18n$secondaryArchSuffix
	devel:libQt5Core$secondaryArchSuffix >= 5.7
	"
BUILD_PREREQUIRES="
	cmd:cmake
	cmd:g++$secondaryArchSuffix
	cmd:make
	cmd:python2
	"

BUILD()
{
	mkdir -p build
	cd build

	cmake .. $cmakeDirArgs \
		-DECM_MKSPECS_INSTALL_DIR=$dataDir/Qt5/mkspecs \
		-DECM_DIR=/system/data/cmake/Modules/ECM/cmake
	make $jobArgs
}

INSTALL()
{
	cd build
	make install

	prepareInstalledDevelLibs \
		libKF5Mime

	packageEntries devel \
		$libDir/cmake \
		$dataDir/Qt5/mkspecs \
		$developDir
}

TEST()
{
	cd build
	make test
}
