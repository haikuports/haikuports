SUMMARY="BeOS version of Pong"
DESCRIPTION="Bong is a FreeWare game for BeOS,based on the old arcade classic Pong"
HOMEPAGE="https://github.com/HaikuArchives/Bong"
COPYRIGHT="1997 by Gertjan van Ratingen"
LICENSE="bong"
REVISION="1"
srcGitRev=906d822b79bdae9328fe743dffe2871f96a30e0e
SOURCE_URI="git+https://github.com/HaikuArchives/Bong.git#$srcGitRev"
SOURCE_DIR="bong-$srcGitRev"

PATCHES="bong-1.0.0.patchset"

ARCHITECTURES="?x86_gcc2 ?x86 x86_64"

PROVIDES="
	bong = $portVersion
	app:bong = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	makefile_engine
	cmd:gcc
	cmd:make
	"

USER_SETTINGS_FILES="
	settings/bong
	"

BUILD()
{
	make $jobArgs OBJ_DIR=objects MACHINE=BePC CC=g++ LD=g++
}

INSTALL()
{
	mkdir -p $appsDir
	cp -a objects/bong $appsDir
	addAppDeskbarSymlink $appsDir/bong
}
