SUMMARY="BeOS version of Pong"
DESCRIPTION="Bong is a FreeWare game for BeOS,based on the old arcade classic Pong"
HOMEPAGE="https://github.com/HaikuArchives/Bong"
COPYRIGHT="1997 by Gertjan van Ratingen"
LICENSE="bong"
REVISION="1"
srcGitRev=906d822b79bdae9328fe743dffe2871f96a30e0e
SOURCE_URI="$HOMEPAGE/archive/$srcGitRev.tar.gz"
SOURCE_FILENAME="bong-1.4~$srcGitRev.tar.gz"
SOURCE_DIR="Bong-$srcGitRev"

PATCHES="bong-$portVersion.patchset"

ARCHITECTURES="?x86_gcc2 ?x86 x86_64"

PROVIDES="
	bong = $portVersion
	app:bong = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	makefile_engine
	cmd:gcc
	cmd:make
	"

GLOBAL_WRITABLE_FILES="
	settings/bong auto-merge
	"

USER_SETTINGS_FILES="
	settings/bong template data/bong/defaultconfig
	"

BUILD()
{
	make $jobArgs OBJ_DIR=objects MACHINE=BePC CC=g++ LD=g++
	mkdir -p settings
	echo "my bong prefs" >settings/bong
}

INSTALL()
{
	install -d $appDir $dataDir/bong $settingsDir
	install -t $appsDir objects/bong
	install -t $settingsDir settings/bong
	install settings/bong $dataDir/bong $dataDir/bong/defaultconfig
	addAppDeskbarSymlink $appsDir/bong Bong
}
