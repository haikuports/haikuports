        cmd:rgblink = $portVersion
        cmd:rgbgfx = $portVersion
        cmd:rgbfix = $portVersion

"

REQUIRES="
        haiku 
	lib:libpng16
	lib:libz
"

BUILD_REQUIRES="
	devel:libpng
	devel:libz
"

