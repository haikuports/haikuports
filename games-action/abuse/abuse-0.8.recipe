	1995 Crack dot Com
	1996-2008 Justin Cassidy
	"
LICENSE="GNU GPL v2"
REVISION="1"
SOURCE_URI="http://abuse.zoy.org/raw-attachment/wiki/download/abuse-0.8.tar.gz"
CHECKSUM_SHA256="0104db5fd2695c9518583783f7aaa7e5c0355e27c5a803840a05aef97f9d3488"
SOURCE_DIR="abuse-0.8"
PATCHES="abuse-0.8.patchset"
ARCHITECTURES="x86_gcc2"

PROVIDES="
	abuse = $portVersion
	cmd:abuse = $portVersion
	cmd:abuse_tool = $portVersion
	"

REQUIRES="
	haiku
	lib:libSDL
	lib:libSDL_mixer_1.2
	lib:libGL
	lib:libGLU
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libSDL
	devel:libSDL_mixer_1.2
	devel:libGLU
	"

BUILD_PREREQUIRES="
	cmd:make
	cmd:gcc
	cmd:awk
	"

BUILD()
{
	runConfigure ./configure --datadir=$dataDir
	make $jobArgs
}

INSTALL()
{
	make install
}
