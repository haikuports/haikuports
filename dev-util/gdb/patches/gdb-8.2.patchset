+
+static void
+haiku_cleanup_thread_list(team_debug_info *teamDebugInfo)
+{
+	for (thread_debug_info *thread : teamDebugInfo->threads)
+		delete thread;
+	teamDebugInfo->threads.clear();
+
+	// clear gdb's thread DB
+	init_thread_list();
+}
