Subject: import patch from version 2.9


diff --git a/configure.in b/configure.in
index ea15e81..70f005a 100644
--- a/configure.in
+++ b/configure.in
@@ -3,5 +3,5 @@
 PACKAGE("BSDBuild")
 VERSION("3.1")
 RELEASE("Blast of Ancient Atmospheres")
-DEFAULT_DIR(DATADIR, "$PREFIX/share/bsdbuild")
+DEFAULT_DIR(DATADIR, "%PREFIX%/data/BSDBuild")
 MDEFINE(CONFIGURE_OK, "yes")
diff --git a/mkconfigure.pl b/mkconfigure.pl
index fd1ce6f..54384cb 100755
--- a/mkconfigure.pl
+++ b/mkconfigure.pl
@@ -989,6 +989,12 @@ do
 	--datadir=*)
 	    datadir=$optarg
 	    ;;
+	--sharedir=*)
+		sharedir=$optarg
+		;;
+	--sbindir=*)
+		sbindir=$optarg
+		;;
 	--statedir=* | --localstatedir=*)
 	    statedir=$optarg
 	    ;;
