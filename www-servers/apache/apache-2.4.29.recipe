	cmd:make
	cmd:pkg_config$secondaryArchSuffix
	cmd:pcre_config
	"

BUILD()
{
	libtoolize --force --copy --install
	aclocal
	autoconf

	runConfigure ./configure \
		--with-apr=/$relativeBinDir \
		--with-apr-util=/$relativeBinDir
	make $jobArgs
}

INSTALL()
{
	make install
}
