BUILD()
{
	libtoolize --force --copy --install
	aclocal
	autoconf

	runConfigure --omit-dirs "binDir sbinDir" ./configure \
		--bindir "$commandBinDir" \
		--with-apr=/$relativeBinDir \
		--with-apr-util=/$relativeBinDir
	make $jobArgs
}

INSTALL()
{
	make install
