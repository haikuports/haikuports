	lib:mod_proxy
	lib:mod_redirect
	lib:mod_rewrite
	lib:mod_rrdtool
	lib:mod_scgi
	lib:mod_secdownload
	lib:mod_setenv
	lib:mod_simple_vhost
	lib:mod_ssi
	lib:mod_staticfile
	lib:mod_status
	lib:mod_trigger_b4_dl
	lib:mod_userdir
	lib:mod_usertrack
	lib:mod_webdav
	"
REQUIRES="
	haiku
	lib:libbz2
	lib:libcrypto
	lib:libpcre
