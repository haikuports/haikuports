ARCHITECTURES="x86_gcc2 x86 x86_64"

PROVIDES="
	vim = $portVersion
	cmd:ex = $portVersion
	cmd:gview = $portVersion
	cmd:gvim = $portVersion
	cmd:gvimdiff = $portVersion
	cmd:rgview = $portVersion
	cmd:rgvim = $portVersion
	cmd:rview = $portVersion
