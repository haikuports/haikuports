SUMMARY="Suite of printer drivers"
DESCRIPTION="Gutenprint is a suite of printer drivers for UNIX, Linux, and \
Macintosh OS X systems (10.6 through currently 10.14) that use \
CUPS as their printing system.  Gutenprint currently supports over \
3000 printers.  It also includes an enhanced Print plug-in for \
GIMP that replaces the print plug-in packaged with the GIMP \
distribution.

Gutenprint supports only the printer part of multi-function \
devices (devices that typically include scanning, copying, and fax \
capabilities)."
HOMEPAGE="http://gimp-print.sourceforge.net/"
COPYRIGHT="1999-2022 The authors of Gutenprint"
LICENSE="GNU GPL v2"
REVISION="2"
SrcGitRev="2022-06-24T01-00-8808d602"
SOURCE_URI="https://sourceforge.net/projects/gimp-print/files/snapshots/gutenprint-$portVersion-$SrcGitRev.tar.xz"
CHECKSUM_SHA256="ef514d4ca567b5871cfe7697127bee2c14d5d71d7fbc68d8fee96b0faaed90e7"
SOURCE_DIR="gutenprint-$portVersion-$SrcGitRev"
PATCHES="gutenprint-$portVersion.patchset"

ARCHITECTURES="all ?x86_gcc2"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	gutenprint9$secondaryArchSuffix = $portVersion
	lib:libgutenprint$secondaryArchSuffix = 9.4.0 compat >= 9
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lib:libintl$secondaryArchSuffix
	lib:libglib_2.0$secondaryArchSuffix

	"

PROVIDES_devel="
	gutenprint9${secondaryArchSuffix}_devel = $portVersion
	devel:libgutenprint$secondaryArchSuffix = 9.4.0 compat >= 9
	"
REQUIRES_devel="
	gutenprint9$secondaryArchSuffix == $portVersion base
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libintl$secondaryArchSuffix
	devel:libglib_2.0$secondaryArchSuffix
	"
BUILD_PREREQUIRES="
	cmd:autoreconf
	cmd:flex
	cmd:gcc$secondaryArchSuffix
	cmd:glib_mkenums$secondaryArchSuffix
	cmd:ld$secondaryArchSuffix
	cmd:libtoolize$secondaryArchSuffix
	cmd:make
	cmd:pkg_config$secondaryArchSuffix
	cmd:sed
	cmd:yacc
	"

BUILD()
{
	runConfigure ./configure --without-cups --with-doc=no --disable-static \
	--disable-escputil --disable-maintainer-mode --disable-testpattern \
	--prefix=$prefix --bindir=$binDir --datadir=$dataDir \
	--datarootdir=$dataRootDir --docdir=$docDir --libexecdir=$libExecDir \
	--libdir=$libDir --includedir=$includeDir --mandir=$manDir

	make $jobArgs
}

INSTALL()
{
	make install

	rm $libDir/libgutenprint.la

	rm -rf $binDir $manDir

	prepareInstalledDevelLibs libgutenprint
	fixPkgconfig

	# devel package
	packageEntries devel \
		$developDir
}

TEST()
{
	make check
}
