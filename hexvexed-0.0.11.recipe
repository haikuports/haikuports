PROVIDES="
	hexvexed = $portVersion
	app:hexvexed = $portVersion
	"
REQUIRES="
	haiku
	"
	
 BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	makefile_engine
