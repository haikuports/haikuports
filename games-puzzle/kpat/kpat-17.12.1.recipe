	cmd:update_mime_database$secondaryArchSuffix
	"

BUILD()
{

	mkdir -p build
	cd build

	cmake .. \
		-DECM_DIR=/system/data/cmake/Modules/ECM/cmake \
		-DCMAKE_INSTALL_PREFIX=$prefix
		-DKDE_INSTALL_BINDIR=$appsDir/KPatience \
		-DKDE_INSTALL_LIBDIR=$appsDir/KPatience/lib \
		-DKDE_INSTALL_DATADIR=$dataDir \
		-DKDE_INSTALL_DATAROOTDIR=$dataDir \
		-DKDE_INSTALL_PLUGINDIR=$addOnsDir/Qt5
	make $jobArgs
}

INSTALL()
{
	cd build
	make install

	rm -rf $appsDir/kpat/include \
		$dataDir/applications \
		$dataDir/icons \
		$dataDir/metainfo \
		$prefix/etc

	local APP_SIGNATURE="application/x-vnd.kde-kpat"
	local MAJOR="`echo "$portVersion" | cut -d. -f1`"
	local MIDDLE="`echo "$portVersion" | cut -d. -f2`"
	local MINOR="`echo "$portVersion" | cut -d. -f3`"
	local LONG_INFO="$SUMMARY"
	sed \
		-e "s|@APP_SIGNATURE@|$APP_SIGNATURE|" \
		-e "s|@MAJOR@|$MAJOR|" \
		-e "s|@MIDDLE@|$MIDDLE|" \
		-e "s|@MINOR@|$MINOR|" \
		-e "s|@LONG_INFO@|$LONG_INFO|" \
		$portDir/additional-files/kpat.rdef.in > kpat.rdef

	addResourcesToBinaries kpat.rdef $appsDir/kpat/kpat
	addAppDeskbarSymlink $appsDir/kpat/kpat
}

TEST()
{
	make test
}
